<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlayerFragment">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/plv_fragment_recipe_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_fragment_recipe_step_default_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fragment_player_recipe_image_desc"
        android:scaleType="fitXY"
        android:src="@drawable/baking_default_image" />
</FrameLayout>