<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_recipe_ingredients_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_recipe_ingredients_widget_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/lv_recipe_ingredients_widget_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/ingredient_card"/>

    <TextView
        android:id="@+id/tv_recipe_ingredients_widget_no_ingredients_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recipe_no_ingredients_message_text"
        android:visibility="gone" />
</LinearLayout>