<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/ingredients_item_root_view_margin"
    android:paddingLeft="@dimen/ingredients_item_root_view_margin"
    android:paddingRight="@dimen/ingredients_item_root_view_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ingredients_item_ingredient_label_padding"
            android:text="@string/ingredient_card_ingredient_label"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/tv_ingredients_item_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="@integer/tv_ingredients_item_ingredient_max_lines"
            android:paddingTop="@dimen/tv_ingredients_item_ingredient_padding_top"
            android:singleLine="false"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/tv_ingredients_item_quantity_label_padding"
            android:paddingLeft="@dimen/tv_ingredients_item_quantity_label_padding"
            android:paddingRight="@dimen/tv_ingredients_item_quantity_label_padding"
            android:text="@string/ingredient_card_quantity_label"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/tv_ingredients_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_ingredients_item_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/tv_ingredients_item_measure_padding"
            android:paddingStart="@dimen/tv_ingredients_item_measure_padding"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>