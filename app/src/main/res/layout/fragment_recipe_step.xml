<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:orientation="vertical"
        tools:context=".fragments.RecipeStepFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cv_fragment_recipe_step_content_margin"
            app:cardCornerRadius="@dimen/cv_fragment_recipe_step_content_corner_radius"
            app:cardElevation="@dimen/cv_fragment_recipe_step_content_elevation">

            <TextView
                android:id="@+id/tv_fragment_recipe_step_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tv_fragment_recipe_step_description_margin"
                android:gravity="center"
                android:text="@string/padding_new_text" />
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/vi_fragment_recipe_step_divider_weight"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_fragment_recipe_step_nav_help_margin"
            android:gravity="center"
            android:text="@string/fragment_recipe_step_navigate_hlp_text"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>